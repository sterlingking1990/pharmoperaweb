FROM node:22.12.0-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install

# Copy source code
COPY . .

# Build the app
RUN npm run build

# Expose port
EXPOSE 8080

# Serve on all interfaces (0.0.0.0) instead of just localhost
CMD ["npx", "serve", "-s", "dist", "-l", "tcp://0.0.0.0:8080", "-n"]