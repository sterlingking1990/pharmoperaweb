FROM node:22.12.0-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including serve)
RUN npm install

# Copy source code
COPY . .

# Build the app
RUN npm run build

# Expose port
EXPOSE 8080

# Use serve directly (it's already installed)
CMD ["npx", "serve", "-s", "dist", "-p", "8080", "-n"]